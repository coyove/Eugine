(struct Template "HTML Templates"
	[::site-name := Config::site-name]
	[::make-header := (lambda (title)
		(var header (join-string (~include "header.html") ""))
		(sprintf header (+ title " | " ::site-name))
	)]

	[::index := (~include "index.eugine")]
	[::submit := (~include "submit.eugine")]
	[::login := (~include "login.eugine")]
	[::welcome := (~include "welcome.eugine")]
)